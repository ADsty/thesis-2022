<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="primary_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">@dimen/primary_text_size_24</item>
    </style>

    <style name="secondary_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">@dimen/secondary_text_size_18</item>
    </style>

    <style name="profile_type_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="profile_info_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>